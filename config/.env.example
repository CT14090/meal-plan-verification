# ========================================
# MEAL PLAN VERIFICATION SYSTEM CONFIG
# ========================================
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_TYPE=sqlite  # Options: sqlite, mysql
DATABASE_PATH=meal_plan.db  # For SQLite
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=meal_plan_user
MYSQL_PASSWORD=your_secure_password
MYSQL_DATABASE=meal_plan_db

# Encryption (CRITICAL - Keep Secret!)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=REPLACE_WITH_GENERATED_KEY

# Flask Configuration
FLASK_SECRET_KEY=your_random_secret_key_here
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# Cashier Station Configuration
STATION_ID=Station_1  # Options: Station_1, Station_2, Station_3
CASHIER_ID=CASHIER_01  # Unique ID for this cashier

# RFID Reader Configuration
RFID_ENABLED=True
RFID_TIMEOUT=5  # Seconds to wait for card scan

# MUNDOWARE Integration
MUNDOWARE_ENABLED=True
MUNDOWARE_SHARED_TABLE=mundoware_student_lookup
MUNDOWARE_HOST=localhost
MUNDOWARE_PORT=3306
MUNDOWARE_USER=mundoware_user
MUNDOWARE_PASSWORD=mundoware_password
MUNDOWARE_DATABASE=mundoware_db

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE_PATH=logs/
LOG_RETENTION_DAYS=30

# UI Configuration
TOUCHSCREEN_AUTO_RESET_SECONDS=3
TOUCHSCREEN_FULLSCREEN=True

# Scheduler
DAILY_RESET_TIME=00:00  # Midnight reset in HH:MM format